{
  "name": "auction-app",
  "version": "1.0.1",
  "description": "Auction app for Semester Project 2",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/js/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ftmkrtgz/Semester-Project-2.git"
  },
  "keywords": [
    "auction",
    "online-auction",
    "bootstrap",
    "sass",
    "eslint"
  ],
  "author": "Fatma Kurtgozu",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.71.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write",
      "eslint --fix"
    ],"*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
